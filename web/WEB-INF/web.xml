<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <!-- Filter the pages for security-->
    <filter>
        <filter-name>UserAuthFilter</filter-name>
        <filter-class>filter.UserAuthFilter </filter-class>
        <init-param>
            <param-name>avoid-urls</param-name>
            <param-value>/login.jsp,/contact,/login,/jsp/contact.jsp</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>UserAuthFilter</filter-name>
        <url-pattern>/jsp/*</url-pattern>
    </filter-mapping>
    <servlet>
        <description>Site Contact Form</description>
        <servlet-name>contact</servlet-name>
        <jsp-file>/jsp/contact.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>SendEmail</servlet-name>
        <servlet-class>controllers.SendEmail</servlet-class>
    </servlet>
    <servlet>
        <description>redirect some urls to jsp pages</description>
        <servlet-name>url</servlet-name>
        <servlet-class>controllers.Url</servlet-class>
    </servlet>
    <servlet>
        <description>login page</description>
        <servlet-name>login</servlet-name>
        <jsp-file>/login.jsp</jsp-file>
    </servlet>
    <servlet>
        <description>Check the login credential</description>
        <servlet-name>Checklogin</servlet-name>
        <servlet-class>controllers.Checklogin</servlet-class>
    </servlet>
    <servlet>
        <description>Servlet where the user profile is updated</description>
        <servlet-name>update_profile</servlet-name>
        <servlet-class>controllers.update_profile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>controllers.logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddUser</servlet-name>
        <servlet-class>controllers.AddUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>checkPrimaryKey</servlet-name>
        <servlet-class>controllers.checkPrimaryKey</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddDrug</servlet-name>
        <servlet-class>controllers.AddDrug</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddPrescription</servlet-name>
        <servlet-class>controllers.AddPrescription</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>contact</servlet-name>
        <url-pattern>/contact</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendEmail</servlet-name>
        <url-pattern>/SendEmail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>url</servlet-name>
        <url-pattern>/url</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Checklogin</servlet-name>
        <url-pattern>/Checklogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>update_profile</servlet-name>
        <url-pattern>/update_profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddUser</servlet-name>
        <url-pattern>/AddUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>checkPrimaryKey</servlet-name>
        <url-pattern>/checkPrimaryKey</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddDrug</servlet-name>
        <url-pattern>/AddDrug</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddPrescription</servlet-name>
        <url-pattern>/AddPrescription</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <!-- For data base connexion -->
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/hospital</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/notfound.jsp</location>
    </error-page>
</web-app>
